{
  "permissions": {
    "allow": [
      "Bash(LOG_LEVEL=debug bun run:*)",
      "Bash(LOG_LEVEL=error bun test:*)",
      "Bash(biome lint:*)",
      "Bash(biome format:*)",
      "Bash(bun add:*)",
      "Bash(bun pm:*)",
      "Bash(bun remove:*)",
      "Bash(bun run:*)",
      "Bash(bun start:*)",
      "Bash(bun test:*)",
      "Bash(bun typecheck:*)",
      "Bash(bun:*)",
      "Bash(bunx remark:*)",
      "Bash(cat:*)",
      "Bash(curl:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(nix develop:*)",
      "Bash(tree:*)",
      "WebFetch(domain:zod.dev)",
      "WebSearch",
      "mcp__backlog__get_task_creation_guide",
      "mcp__backlog__get_workflow_overview",
      "mcp__backlog__task_create",
      "mcp__backlog__task_edit",
      "mcp__backlog__task_list",
      "mcp__backlog__task_search",
      "mcp__backlog__task_view",
      "mcp__backlog__task_complete",
      "Bash(chmod:*)",
      "Bash(biome check:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(timeout 120 bun test:*)",
      "Bash(timeout 180 bun test:*)",
      "Bash(biome:*)"
    ],
    "deny": [],
    "ask": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "backlog"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "biome check --write src/**/*.ts",
            "statusMessage": "Formatting and Linting code..."
          },
          {
            "type": "command",
            "command": "bun typecheck",
            "statusMessage": "Running type check..."
          }
        ]
      }
    ]
  }
}
