{
  "name": "llm-orchestrator",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "start": "bun run src/main.ts",
    "dev": "bun run --hot src/main.ts",
    "server:mcp": "bun run src/server.ts --mode=mcp",
    "server:webhook": "bun run src/server.ts --mode=webhook",
    "build": "bun build ./src/main.ts --compile --outfile dist/llm-orchestrator",
    "test": "bun test",
    "test-cli": "bun run src/test-cli.ts",
    "typecheck": "tsc --noEmit",
    "lint": "bunx biome check src/",
    "generate-bun-nix": "bunx bun2nix"
  },
  "dependencies": {
    "@langchain/textsplitters": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@qdrant/js-client-rest": "^1.16.2",
    "gpt-tokenizer": "^3.4.0",
    "gray-matter": "^4.0.3",
    "luxon": "^3.7.2",
    "openai": "^6.15.0",
    "pino": "^10.1.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "unist-util-visit": "^5.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "@types/luxon": "^3.7.1",
    "@types/unist": "^3.0.3",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3"
  }
}
